
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDataTables.cshtml";
}
<div id="liveAlertPlaceholder"></div>
<h1>Data Tables <span><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fa-solid fa-plus"></i></button></span></h1>

<table id="myTable" class="display">
  <thead>
  <tr>
    <th>No</th>
    <th>Nik</th>
    <th>FullName</th>
    <th>BirthDate</th>
    <th>Gender</th>
    <th>Action</th>
    @* <th>HiringDate</th> *@
    @* <th>e-mail</th> *@
    @* <th>PhoneNumber</th> *@
    @* <th>major</th> *@
    @* <th>degree</th> *@
    @* <th>gpa</th> *@
    @* <th>UniversityName</th> *@
    @* <!-- Add more columns as needed --> *@
  </tr>
  </thead>
  <tbody></tbody>
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">wdwdw</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="insertForm">
                  <div class="mb-3">
                    <label for="firstName" class="col-form-label">First Name:</label>
                    <input type="text" class="form-control" id="firstName" required>
                  </div>
                  <div class="mb-3">
                    <label for="lastName" class="col-form-label">Last Name:</label>
                    <input type="text" class="form-control" id="lastName" required>
                  </div>
                  <div class="mb-3">
                    <label for="birthDate" class="col-form-label">Birth Date:</label>
                    <input type="date" class="form-control" id="birthDate" required>
                  </div>
                  <div class="mb-3">
                    <label for="gender" class="col-form-label">Gender:</label>
                    <select class="form-control" id="gender" required>
                      <option value="0">Male</option>
                      <option value="1">Female</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label for="hiringDate" class="col-form-label">Hiring Date:</label>
                    <input type="datetime-local" class="form-control" id="hiringDate" required>
                  </div>
                  <div class="mb-3">
                    <label for="email" class="col-form-label">Email:</label>
                    <input type="email" class="form-control" id="email" required>
                  </div>
                  <div class="mb-3">
                    <label for="phoneNumber" class="col-form-label">Phone Number:</label>
                    <input type="tel" class="form-control" id="phoneNumber" required>
                  </div>
                  <div class="mb-3">
                    <label for="major" class="col-form-label">Major:</label>
                    <input type="text" class="form-control" id="major" required>
                  </div>
                  <div class="mb-3">
                    <label for="degree" class="col-form-label">Degree:</label>
                    <input type="text" class="form-control" id="degree" required>
                  </div>
                  <div class="mb-3">
                    <label for="gpa" class="col-form-label">GPA:</label>
                    <input type="number" step="0.01" class="form-control" id="gpa" required>
                  </div>
                  <div class="mb-3">
                    <label for="universityCode" class="col-form-label">University Code:</label>
                    <input type="text" class="form-control" id="universityCode" required>
                  </div>
                  <div class="mb-3">
                    <label for="universityName" class="col-form-label">University Name:</label>
                    <input type="text" class="form-control" id="universityName" required>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="col-form-label">Password:</label>
                    <input type="password" class="form-control" id="password" required>
                  </div>
                  <div class="mb-3">
                    <label for="confirmPassword" class="col-form-label">Confirm Password:</label>
                    <input type="password" class="form-control" id="confirmPassword" required>
                  </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="sendMessageBtn">Send message</button>
            </div>
        </div>
    </div>
</div>